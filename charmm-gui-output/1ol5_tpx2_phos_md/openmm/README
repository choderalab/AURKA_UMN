#!/bin/csh
#

# Generated by CHARMM-GUI (http://www.charmm-gui.org) v1.6

# This folder contains a pre-optimized PDB structure and OpenMM inputs.
# All input files were optimized for OpenMM v6.2 or above, so lower version of OpenMM can cause some errors.
# You can get the latest development version of OpenMM at the git repository:
# https://github.com/pandegroup/openmm


# Equilibration
# step4

python openmm_run.py step4_equilibration.inp > step4_equilibration.out


# Production

# The OpenMM check point file (.chk) cannot be used in a different machine environment.
# So please make sure if you are using the same GPU and CUDA version of machine while doing additional
# production steps with the check point file.

set cnt = 1
set cntmax = 10

while ( ${cnt} <= ${cntmax} )
	if ( ${cnt} == 1 ) then
		set set1=`sed -n "/input_rst/"p step5_production.inp |awk '{print $2, $3}'`
		set set2=`sed -n "/input_chk/"p step5_production.inp |awk '{print $2, $3}'`
		set set3=`sed -n "/output_dcd/"p step5_production.inp |awk '{print $3}'`
		set set4=`sed -n "/output_chk/"p step5_production.inp |awk '{print $3}'`
		sed -i -e "/input_rst/s/${set1}/= step4_equilibration.rst/g" -e "/input_chk/s/${set2}/=/g" -e "/output_dcd/s/${set3}/step5_${cnt}.dcd/g" -e "/output_chk/s/${set4}/step5_${cnt}.chk/g" step5_production.inp
	else
		@ pcnt = ${cnt} - 1
		set set1=`sed -n "/input_rst/"p step5_production.inp |awk '{print $2, $3}'`
		set set2=`sed -n "/input_chk/"p step5_production.inp |awk '{print $2, $3}'`
		set set3=`sed -n "/output_dcd/"p step5_production.inp |awk '{print $3}'`
		set set4=`sed -n "/output_chk/"p step5_production.inp |awk '{print $3}'`
		sed -i -e "/input_rst/s/${set1}/=/g" -e "/input_chk/s/${set2}/= step5_${pcnt}.chk/g" -e "/output_dcd/s/${set3}/step5_${cnt}.dcd/g" -e "/output_chk/s/${set4}/step5_${cnt}.chk/g" step5_production.inp
	endif
	python openmm_run.py step5_production.inp > step5_${cnt}.out
	@ cnt += 1
end
